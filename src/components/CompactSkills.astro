---
interface Skill {
  name: string;
  percentage: number;
  icon: string;
}

const skills: Skill[] = [
  { name: 'Storytelling', percentage: 90, icon: '/mnt/data/video-editing.png' },
  { name: 'Sound Design', percentage: 60, icon: '/mnt/data/sound.png' },
  { name: 'Animation', percentage: 65, icon: '/mnt/data/animation.png' },
  { name: 'Motion Graphics', percentage: 80, icon: '/mnt/data/motion.png' },
];

import Icon from './Icon.astro';
---

<div class="skills-container">
  <h2>Professional Skills</h2>
  <div class="skills-grid">
    {skills.map((skill) => (
      <div class="skill-card">
        <div class="skill-icon">
          <img src={skill.icon} alt={skill.name} width="40" height="40" />
        </div>
        <div class="skill-info">
          <span class="skill-name">{skill.name}</span>
        </div>
      </div>
    ))}
  </div>
</div>

<style>
  .skills-container {
    background: var(--gray-999_40);
    padding: 1.5rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  h2 {
    font-size: var(--text-xl);
    color: var(--gray-0);
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .skills-grid {
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(2, 1fr);
  }

  @media (max-width: 768px) {
    .skills-grid {
      grid-template-columns: 1fr;
    }
  }

  .skill-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem;
    background: var(--gray-999);
    border-radius: 0.5rem;
    transition: transform 0.3s ease;
  }

  .skill-card:hover {
    transform: translateX(0.5rem);
  }

  .skill-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3.5rem;
    height: 3.5rem;
    background: var(--gradient-accent);
    border-radius: 0.5rem;
    color: var(--gray-999);
  }

  .skill-icon img {
    width: 3rem;
    height: 3rem;
    border-radius: 0.5rem;
  }

  .skill-info {
    flex: 1;
  }

  .skill-name {
    display: block;
    font-size: var(--text-lg);
    color: var(--gray-200);
    margin-bottom: 0.25rem;
  }
</style>
